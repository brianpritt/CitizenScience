@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<h2>Research Login</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <div class="index-middle">
        <h4>Hello @User.Identity.Name!</h4>

        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-default" value="Log out" />
        }
    </div>
    <hr>
    <h5>@Html.ActionLink("Collection Portal", "Index", "Collection")</h5>
    <h5>@Html.ActionLink("Research Portal", "Index", "Research")</h5>
    @using (Html.BeginForm("LogOff", "Account")) { 
        <input type="submit" class="btn" value="View Submission History" />
        //ajax call not written for this yet.. create scripts file
    }
    <hr />
}

else
{
    <div class="row">
        <div class="col s12 m12">
            <div class="card-panel grey">
                <span class="black-text">
                    <h5>@Html.ActionLink("Log in", "Login", "Account")</h5>
                    <h5>@Html.ActionLink("Register", "Register", "Account")</h5>
                </span>
            </div>
        </div>
    </div>
}