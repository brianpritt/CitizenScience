@model List<CitizenScience.Models.Fauna>
@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <div class="index-middle">
        <h5>@Html.ActionLink("Collection Portal", "Index", "Collection") | @Html.ActionLink("Research Portal", "Index", "Research")</h5>
        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-default" value="Log out" />
        }
    </div>
    <h3>Your Submission History</h3>
    @foreach(CitizenScience.Models.Fauna item in Model)
    {
        string photoImage = "";
        if (item.FaunaPhoto != null)
        {
            var base64File = Convert.ToBase64String(item.FaunaPhoto);
            photoImage = String.Format("data:image/gif;base64,{0}", base64File);

        }
        <h5>Name: @item.FaunaName Description: @item.FaunaDescripton</h5>
        <img src="@photoImage" />
        <p>@item.FaunaPhoto</p>
    }
    <hr />
}

else
{
    <h2>Research Login</h2>
    <hr />
    <div class="row">
        <div class="col s12 m12">
            <div class="card-panel grey">
                <span class="black-text">
                    <h5>@Html.ActionLink("Log in", "Login", "Account")</h5>
                    <h5>@Html.ActionLink("Register", "Register", "Account")</h5>
                </span>
            </div>
        </div>
    </div>
}