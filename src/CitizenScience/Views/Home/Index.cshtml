
<h4 class="centering">Where Researchers and the Public Collaborate</h4>
@if (User.Identity.IsAuthenticated)
{
    <div class="centering">
        <p>Welcome @User.Identity.Name</p>
        <p>Please choose a portal:</p>
        <p>@Html.ActionLink("Collection Portal", "Index", "Collection") | @Html.ActionLink("Research Portal", "Index", "Research")</p>
    </div>

}
else
{

    <hr />
    <div class="row">
        <div class="col s12 m12">
            <div class="card-panel grey">
                <span class="black-text">
                    <h5>Please log in</h5>
                    <p>@Html.ActionLink("Log in", "Login", "Account")</p>
                    <p>@Html.ActionLink("Register", "Register", "Account")</p>
                </span>
            </div>
        </div>
    </div>
}